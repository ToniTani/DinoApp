<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/right_down"
        android:layout_width="136dp"
        android:layout_height="195dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/right_up"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/left_down"
        android:layout_width="136dp"
        android:layout_height="195dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/left_up"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/right_up"
        android:layout_width="136dp"
        android:layout_height="195dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="75dp"
        app:layout_constraintBottom_toTopOf="@+id/right_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/left_up"
        android:layout_width="136dp"
        android:layout_height="195dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="171dp"
        app:layout_constraintBottom_toTopOf="@id/left_down"
        app:layout_constraintEnd_toStartOf="@id/right_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_back" />
</androidx.constraintlayout.widget.ConstraintLayout>